   "source": [
    "# Check prerequisites\n",
    "import subprocess\n",
    "import sys\n",
    "\n",
    "def check_prerequisites():\n",
    "    \"\"\"Check if all prerequisites are installed.\"\"\"\n",
    "    checks = {\n",
    "        \"Python\": ([\"python\", \"--version\"], \"3.11\"),\n",
    "        \"Git\": ([\"git\", \"--version\"], \"git version\"),\n",
    "        \"pip\": ([\"pip\", \"--version\"], \"pip\")\n",
    "    }\n",
    "    \n",
    "    print(\"Checking prerequisites...\\n\")\n",
    "    all_ok = True\n",
    "    \n",
    "    for tool, (cmd, expected) in checks.items():\n",
    "        try:\n",
    "            result = subprocess.run(cmd, capture_output=True, text=True)\n",
    "            if expected in result.stdout or expected in result.stderr:\n",
    "                print(f\"‚úÖ {tool}: OK\")\n",
    "            else:\n",
    "                print(f\"‚ùå {tool}: Not found or wrong version\")\n",
    "                all_ok = False\n",
    "        except Exception as e:\n",
    "            print(f\"‚ùå {tool}: Not installed\")\n",
    "            all_ok = False\n",
    "    \n",
    "    if all_ok:\n",
    "        print(\"\\nüéâ All prerequisites are satisfied!\")\n",
    "    else:\n",
    "        print(\"\\n‚ö†Ô∏è Please install missing prerequisites before continuing.\")\n",
    "    \n",
    "    return all_ok\n",
    "\n",
    "check_prerequisites()"
